@model WebKutuphane.Models.UyeBilgileri

@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Üyelik</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*@Html.LabelFor(model => model.KullaniciAdi, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-12">
            @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", required = "required" , placeholder = "kullanıcı adı" } })
            @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "ad" } })
            @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "soyad" } })
            @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.KullaniciSifre, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "şifre" } })
            @Html.ValidationMessageFor(model => model.KullaniciSifre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.KullaniciSifreTekrar, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "şifre tekrar" } })
            @Html.ValidationMessageFor(model => model.KullaniciSifreTekrar, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.KullaniciTC, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "tc kimlik numarası", MaxLength = "11" ,MinLength="11"} })
            @Html.ValidationMessageFor(model => model.KullaniciTC, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.KullaniciTelefon, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "telefon (başa 0 koymayınız)", MaxLength = "10", MinLength = "10" } })
            @Html.ValidationMessageFor(model => model.KullaniciTelefon, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

    @if (ViewBag.uyarı1 != null)
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="alert alert-warning" role="alert">
                    <label>@ViewBag.uyarı1</label>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.uyarı2 != null)
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="alert alert-warning" role="alert">
                    <label>@ViewBag.uyarı2</label>
                </div>
            </div>
        </div>
    }

</div>
}

<style>
    .form-group{
        margin:5px;
    }
    .form-horizontal{
        display:flex;
        flex-direction:column;
        justify-content:center;
        align-items:center;
    }
</style>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
