@model WebKutuphane.Models.UyeBilgileri

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="kutu" style="margin-top:80px; margin-bottom:160px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", placeholder = "kullanıcı adı" } })
                    @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.KullaniciSifre, new { htmlAttributes = new { @class = "form-control", placeholder = "şifre" } })
                    @Html.ValidationMessageFor(model => model.KullaniciSifre, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="GİRİŞ YAP" class="btn" style="background-color: #123c69; color: white; margin-top: 10px; width: 100%; " />
                </div>
            </div>

            <a href="/Home/Signup" style="color: #123c69; text-align: center; display: block; margin-top:15px;">
                Bize katılmak ister misin?<lord-icon src="https://cdn.lordicon.com/rjzlnunf.json"
                                                        trigger="loop"
                                                        delay="100"
                                                        colors="primary:#121331,secondary:#fad1e6"
                                                        style="width:30px;height:30px; margin-bottom:5px;">
                </lord-icon>
            </a>
            @if (ViewBag.uyarı != null)
            {
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <div class="alert alert-warning" role="alert">
                            <label>@ViewBag.uyarı</label>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<style>
    .form-group {
        margin: 5px;
    }

    .form-horizontal {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .form-control {
        text-align: center;
    }
    .kutu {
        margin-right: auto;
        margin-left: auto;
        background-color: white;
        padding: 50px;
        border: 5px solid;
        border-radius: 20px;
    }
    .btn:hover {
        background-color: #7ba3ce !important;
    }
</style>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
