                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="kitaplar">


                @foreach (var item in Model)
                {
                    <div class="card" style="width: 18rem;">
                        <a href="/Kitap/Details/@item.id"><img src="~/img/@item.resim" class="card-img-top" alt="kitap resmi"></a>
                        <div class="card-body">
                            <h5 class="card-title">@item.ad</h5>
                            <p class="card-text">@item.yazar</p>
                        </div>
                    </div>
                }
            </div>
            </div>
    </div>
</div>



<style>
    .konteyner {
        margin: 5px;
    }
    .kitaplar {
        display: flex;
        flex-wrap: wrap;
        justify-content:center;
        align-items:center;
