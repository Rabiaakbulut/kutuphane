@model WebKutuphane.Models.UyeBilgileri
@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["KullaniciAdiSS"] != null)
{
<div class="kutu">
    <div class="ikon">
        <lord-icon src="https://cdn.lordicon.com/dxjqoygy.json"
                   trigger="loop"
                   delay="5000"
                   colors="primary:#123c69,secondary:#123c69"
                   style="width:250px;height:250px">
        </lord-icon>
    </div>
    <div class="bilgiler">
        <p style="margin-top:40px;"><b>Ad: </b>@Model.Ad @Model.Soyad</p>
        <p><b>Kullanıcı Adı: </b>@Model.KullaniciAdi</p>

        @if (Model.Ceza == 0)
        {
            <div class="ceza">
                <p><b>Ceza Durumu: </b>Tebrikler hiç cezanız yok </p>
            </div>
        }
        else if (Model.Ceza == 1)
        {
            <div class="ceza">
                <p><b>Ceza Durumu: </b>Dikkat 1 cezanız var </p>
            </div>
        }
        else
        {
            <div class="ceza">
                <p><b>Ceza Durumu: </b>Lütfen ceza ücretinizi kütüphane yöneticilerine ödeyiniz </p>
            </div>
        }

        @if (Model.KitapId == null)
        {
            <p><b>Kitap: </b>Üzerinize kayıtlı kitap bulunamadı</p>
        }
        else
        {
            <p><b>Kitap: </b><a href="/Kitap/Details/@ViewBag.kitapId">@ViewBag.kitapAdı</a></p>
        }
    </div>
</div>

     
    }
    else
    {
<div class="kutu2">
