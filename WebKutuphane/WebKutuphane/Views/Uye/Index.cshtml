@model IEnumerable<WebKutuphane.Models.UyeBilgileri>

@{
    ViewBag.Title = "Index";
}
<script src="https://cdn.lordicon.com/libs/frhvbuzj/lord-icon-2.0.2.js"></script>

<h2>ÜYE BİLGİLERİ</h2>
@Html.Action("İadeCeza", "Uye")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KullaniciAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KullaniciSifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KullaniciTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KullaniciTelefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KitapId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KitapAlımTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ceza)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciSifre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciTelefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KitapId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KitapAlımTarihi)
            </td>
            <td>
                @if (item.Ceza == 2)
                {

                    <lord-icon src="https://cdn.lordicon.com/tdrtiskw.json"
                               trigger="loop-on-hover"
                               colors="primary:#c71f16,secondary:#c71f16"
                               style="width:50px;height:50px">
                    </lord-icon>
                }
                else if (item.Ceza == 1)
                {
                    <lord-icon src="https://cdn.lordicon.com/tdrtiskw.json"
                               trigger="loop-on-hover"
                               colors="primary:#ff9d28,secondary:#ff9d28"
                               style="width:50px;height:50px">
                    </lord-icon>
                }
                else
                {
                    <lord-icon src="https://cdn.lordicon.com/tdrtiskw.json"
                               trigger="loop-on-hover"
                               colors="primary:#30e849,secondary:#30e849"
                               style="width:50px;height:50px">
                    </lord-icon>
                }
            </td>
        </tr>
    }

</table>
