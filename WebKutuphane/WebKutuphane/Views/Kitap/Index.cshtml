            @Html.DisplayFor(modelItem => item.mevcutmu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.açıklama)
        </td>
        <td>
            @Html.ActionLink("DÜZENLE", "Edit", new { id = item.id }) |
            @Html.ActionLink("DETAY", "Details", new { id = item.id }) |
            @Html.ActionLink("SİL", "Delete", new { id = item.id }) |
