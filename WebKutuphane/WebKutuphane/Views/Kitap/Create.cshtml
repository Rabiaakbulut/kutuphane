@model WebKutuphane.Models.Kitap

@{
    ViewBag.Title = "Create";
}

<div style="margin:30px;">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="kutu">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                        @Html.EditorFor(model => model.ad, new { htmlAttributes = new { @class = "form-control", placeholder = "kitap" } })
                        @Html.ValidationMessageFor(model => model.ad, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                        @Html.EditorFor(model => model.yazar, new { htmlAttributes = new { @class = "form-control", placeholder = "yazar" } })
                        @Html.ValidationMessageFor(model => model.yazar, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                        @Html.EditorFor(model => model.resim, new { htmlAttributes = new { @class = "form-control", placeholder = "resim.jpg" } })
                        @*@Html.TextBoxFor(model => model.resim, new { type = "file"  })*@
                        @Html.ValidationMessageFor(model => model.resim, "", new { @class = "text-danger" })
                </div>

                <div style="display:flex;">

                    <div class="form-group col-md-4" style="display:flex;">
                        <p>Tür: </p>
                        <select id="tür" name="tür" style="margin:0px 10px;">
                            <option value="Edebiyat">Edebiyat</option>
                            <option value="ÇocukVeGençlik">Çocuk Ve Gençlik</option>
                            <option value="AraştırmaTarih">Araştırma - Tarih</option>
                            <option value="SanatTasarım">Sanat - Tasarım</option>
                            <option value="Felsefe">Felsefe</option>
                            <option value="Bilim">Bilim</option>
                            <option value="ÇizgiRoman">Çizgi Roman</option>
                        </select>
                    </div>


                    <div class="form-group col-md-4" style="display:flex;">
                        <p>Dil: </p>
                        <select id="dil" name="dil" style="margin:0px 10px;">
                            <option value="Türkçe">Türkçe</option>
                            <option value="İngilizce">İngilizce</option>
                            <option value="Almanca">Almanca</option>
                            <option value="Diğer">Diğer</option>
                        </select>
                    </div>

                    <div class="form-group" style="width: 100%;">
                        <input type="submit" value="Create" class="btn col-md-4" style="background-color: #123c69; color: white; width:100%;" />
                    </div>


                </div>


                @*<div class="form-group">
            @Html.LabelFor(model => model.açıklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.açıklama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.açıklama, "", new { @class = "text-danger" })
            </div>
        </div>*@


            </div>
        </div>
    }


</div>

<style>
    .kutu {
        margin: 100px 400px;
        background-color: white;
        padding: 50px;
        border: 5px solid #123c69;
        border-radius: 20px;
    }
    .form-group{
        margin:5px;
    }
    .btn:hover {
        background-color: #7ba3ce !important;
    }
</style>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
