@model WebKutuphane.Models.Kitap

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div class="kutu">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.EditorFor(model => model.ad, new { htmlAttributes = new { @class = "form-control", placeholder = "kitap" } })
            @Html.ValidationMessageFor(model => model.ad, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.yazar, new { htmlAttributes = new { @class = "form-control", placeholder = "yazar" } })
            @Html.ValidationMessageFor(model => model.yazar, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.resim, new { htmlAttributes = new { @class = "form-control", placeholder = "resim.jpg" } })
            @Html.ValidationMessageFor(model => model.resim, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.TextAreaFor(model => model.açıklama, new { htmlAttributes = new { @class = "form-control", placeholder = "açıklama" } , cols = 80, rows = 5 })
            @Html.ValidationMessageFor(model => model.açıklama, "", new { @class = "text-danger" })
        </div>

        <div class="konteyner" style="display:flex;">
            <div class="form-group col-md-4" style="display:flex;">
                <p style="margin-right:5px;">Tür: </p>
                @Html.DropDownListFor(
                model => model.tür,
                new SelectList(
                new List<Object>
                    {
                    new { value = "Edebiyat" , text = "Edebiyat"  },
                    new { value = "ÇocukVeGençlik" , text = "Çocuk Ve Gençlik"  },
                    new { value = "AraştırmaTarih" , text = "Araştırma - Tarih" },
                    new { value = "SanatTasarım" , text = "Sanat - Tasarım"},
                    new { value = "Felsefe" , text = "Felsefe"},
                    new { value = "Bilim" , text = "Bilim"},
                    new { value = "ÇizgiRoman" , text = "Çizgi Roman"}
                    },
                    "value",
                    "text",
                    Model.tür
                    )
                    )
                @Html.ValidationMessageFor(model => model.tür, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-4" style="display:flex;">
                <p style="margin-right:5px" ;>Dil: </p>
                @Html.DropDownListFor(
                model => model.dil,
                new SelectList(
                new List<Object>
                    {
                    new { value = "Türkçe" , text = "Türkçe"  },
                    new { value = "İngilizce" , text = "İngilizce"  },
                    new { value = "Almanca" , text = "Almanca" },
                    new { value = "Diğer" , text = "Diğer"}
                    },
                    "value",
                    "text",
                    Model.dil
                    )
                    )
                @Html.ValidationMessageFor(model => model.dil, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-4" style="display:flex;">
                <p style="margin-right:5px;">Mevcut: </p>
                <div class="checkbox">
                    @Html.EditorFor(model => model.mevcutmu)
                    @Html.ValidationMessageFor(model => model.mevcutmu, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="KAYDET" class="btn col-md-4" style="background-color: #123c69; color: white; width:100%;" />

            </div>
        </div>
    </div>
</div>
}

<style>
    .kutu {
        margin: 100px 400px;
        background-color: white;
        padding: 50px;
        border: 5px solid #123c69;
        border-radius: 20px;
    }
    .form-group {
        margin: 5px;
    }

    .btn:hover {
        background-color: #7ba3ce !important;
    }
</style>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
