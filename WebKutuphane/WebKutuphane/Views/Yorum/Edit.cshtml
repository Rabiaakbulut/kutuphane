@model WebKutuphane.Models.Yorum

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="kutu">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.KitapId, new { htmlAttributes = new { @class = "form-control", placeholder = "kitap id" } })
                        @Html.ValidationMessageFor(model => model.KitapId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", placeholder = "kullanıcı adı" } })
                        @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                    </div>
                </div>
            <div class="form-group">
                    @Html.TextAreaFor(model => model.Metin, new { htmlAttributes = new { @class = "form-control", placeholder = "yorum" }, cols = 80, rows = 5 })
                    @Html.ValidationMessageFor(model => model.Metin, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2">
                    <input type="submit" value="KAYDET" class="btn col-md-4" style="background-color: #123c69; color: white; width:100%;" />

                </div>
            </div>
        </div>
    </div>
}


<style>
    .kutu {
        margin: 100px 400px;
        background-color: white;
        padding: 50px;
        border: 5px solid #123c69;
        border-radius: 20px;
    }

    .form-group {
        margin: 5px;
    }

    .btn:hover {
        background-color: #7ba3ce !important;
    }
</style>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
